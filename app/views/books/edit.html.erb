<body>
  <h1>Editing Book</h1>
  
  <%= form_with model: @book do |f| %>
    <div class=input>
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    
    <div class=input>
      <label>Body</label>
      <%= f.text_area :body %>
    </div>
    
    <div class=input>
      <%= f.submit 'Update Book' %>
    </div>
  
    <%= link_to "Show", book_path(@book.id) %>
    |
    <%= link_to "Back", '/books' %>
    
  <% end %>
</body>