<body>
  <h1>Editing Book</h1>
  
  <%= form_with model: @book do |f| %>
    <% if @book.errors.any? %>
      <div id=error>
        <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
        
        <ul>
          <% @book.errors.full_messages.each do |message| %>
           <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <% if @book.errors.any? && !@book.errors[:title].empty? %>
      <div class=input>
        <div class=input_error><label>Title</label></div>
        <div class=input_error><%= f.text_field :title %></div>
      </div>
    <% else %>
      <div class=input>
        <label>Title</label>
        <%= f.text_field :title %>
      </div>
    <% end %>
    
    <% if @book.errors.any? && !@book.errors[:body].empty? %>
      <div class=input>
        <div class=input_error><label>Body</label></div>
        <div class=input_error><%= f.text_field :body %></div>
      </div>
    <% else %>
      <div class=input>
        <label>Body</label>
        <%= f.text_area :body %>
      </div>
    <% end %>
    <div class=input>
        <%= f.submit 'Update Book' %>
    </div>
    
    <%= link_to "Show", book_path(@book.id) %>
    |
    <%= link_to "Back", '/books' %>
    
  <% end %>
</body>